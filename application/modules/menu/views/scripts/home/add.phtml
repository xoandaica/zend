                                                loopChildMenu($arrayMenu[$i], $_COUNT);
                                            }
                                        }

                                        function loopChildMenu($menu, $_COUNT) {
                                            // $_COUNT use to reset index root menu
                                            STATIC $_count = 0;
                                            if ($_COUNT == 0) {
                                                $_count = $_COUNT;
                                            }
                                            if (sizeof($menu->getArrayChildMenu()) > 0) {
                                                for ($i1 = 0; $i1 < sizeof($menu->getArrayChildMenu()); $i1 ++) {
                                                    echo '<option value=' . $menu->getArrayChildMenu()[$i1]->getDataId() . '">' . expression($_count) . '-' . $menu->getArrayChildMenu()[$i1]->getCurrentMenu() . '</option>';
                                                    loopChildMenu($menu->getArrayChildMenu()[$i1], ++$_count);
                                                }
                                            } else {
                                                --$_count;
                                            }
                                        }

                                        /**
                                         * print '-' follow menu
                                         * @param type $_count
                                         * @return string
                                         */
                                        function expression($_count) {
                                            $express = '';
                                            for ($i = 0; $i < $_count; $i++) {
                                                $express .= ' - ';
                                            }
                                            return $express;
                                        }

